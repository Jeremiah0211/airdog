<?xml version="1.0" encoding="utf-8"?>
<mx:VBox 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:controller="no.airdog.controller.*"
	styleName="nopaddingorborderorgap" 
	width="100%" height="100%">
	<mx:Script>
        <![CDATA[
			import no.airdog.services.Components;      
			import no.airdog.controller.*;
		
			public function generer():void
			{
				Components.instance.controller.hentFiktivtStamtre(hundIdFar.text, hundIdMor.text, dybde.value);
			}
        ]]>
    </mx:Script>
    
    <mx:HBox styleName="viewmeny" width="100%">
    	<mx:FormItem label="Fars ID">
    		<mx:TextInput id="hundIdFar" enter="generer()"/>
    	</mx:FormItem>
    	<mx:FormItem label="Mors ID">
    		<mx:TextInput id="hundIdMor" enter="generer()"/>
    	</mx:FormItem>
    	<mx:FormItem label="Dybde">
    		<mx:NumericStepper value="3" minimum="1" maximum="20" id="dybde"/>
    	</mx:FormItem>
    	<mx:FormItem>
    		<mx:LinkButton label="Generer" click="generer()" icon="@Embed(source='assets/ikoner/arrow_join_180.png')"/>
    	</mx:FormItem>
    </mx:HBox>
    <mx:VBox width="100%" height="100%" verticalAlign="middle" horizontalAlign="center">
    	<controller:HundeStamtre hund="{Components.instance.session.fiktivtStamtre}"/>
    </mx:VBox>
    
</mx:VBox>