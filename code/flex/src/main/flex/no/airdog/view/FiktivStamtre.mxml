<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" paddingLeft="4" paddingRight="4" xmlns:controller="no.airdog.controller.*">
	<mx:Script>
        <![CDATA[
			import no.airdog.services.Components;      
			import no.airdog.controller.*;
		
			public function generer():void
			{
				Components.instance.controller.hentFiktivtStamtre(hundIdFar.text, hundIdMor.text, dybde.value);
			}
        ]]>
    </mx:Script>
    
    <mx:HBox>
    	<mx:FormItem label="Fars ID">
    		<mx:TextInput id="hundIdFar" enter="generer()"/>
    	</mx:FormItem>
    	<mx:FormItem label="Mors ID">
    		<mx:TextInput id="hundIdMor" enter="generer()"/>
    	</mx:FormItem>
    	<mx:FormItem label="Dybde">
    		<mx:NumericStepper value="3" minimum="1" maximum="20" id="dybde"/>
    	</mx:FormItem>
    	<mx:FormItem>
    		<mx:Button label="Generer" click="generer()" icon="@Embed(source='assets/ikoner/arrow_join_180.png')"/>
    	</mx:FormItem>
    </mx:HBox>
	<controller:HundeStamtre hund="{Components.instance.session.fiktivtStamtre}" />
    
