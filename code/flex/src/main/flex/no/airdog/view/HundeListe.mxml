<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
	width="800" height="600" paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0" layout="vertical">
	
	<mx:Model id="model" source="../../../resources/Hunder.xml"/>
	
	<mx:Component id="bildeRenderer">
        <mx:VBox 
            width="60" height="60"
            horizontalAlign="center" verticalAlign="middle">
            <mx:Image source="{data.bilde}" width="50" height="50"/>
        </mx:VBox>
    </mx:Component>
    
    <mx:Component id="navnRenderer">
        <mx:VBox 
            width="100%" height="60"
            horizontalAlign="left" verticalAlign="middle">
            	<mx:Text text="{data.navn}" fontSize="20" paddingBottom="-5"/>
            	<mx:Text text="{data.tittel}" paddingTop="-5"/>	
        </mx:VBox>
    </mx:Component>
    
    <mx:Component id="infoRenderer">
        <mx:VBox 
            width="100%" height="60"
            horizontalAlign="left" verticalAlign="middle">
            <mx:Text text="{'HUID: '+data.huid}"/>
            <mx:Text text="{'KjÃ¸nn: '+data.kjoenn}"/>
        </mx:VBox>
    </mx:Component>
	
	<mx:Panel width="800" height="600">
	<mx:DataGrid id="grid1" dataProvider="{model.hund}" width="100%" rowHeight="60">
		<mx:columns>
			<mx:DataGridColumn itemRenderer="{bildeRenderer}" headerText="Bilde" sortable="false" resizable="false" width="60"/>
			<mx:DataGridColumn itemRenderer="{navnRenderer}" headerText="Navn"/>
			<mx:DataGridColumn itemRenderer="{infoRenderer}" headerText="Info"/>
		</mx:columns>
	</mx:DataGrid>
	</mx:Panel>
	
</mx:Application>