<?xml version="1.0" encoding="utf-8"?>
<mx:VBox 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:controller="no.airdog.controller.*"
	xmlns:view="no.airdog.view.*"
	xmlns:adminView="no.airdog.view.admin.*"
	creationComplete="init()"
	width="90%" height="100%">
	
	<mx:Script>
        <![CDATA[
			import no.airdog.services.Components;
			import mx.core.UIComponent;
			
			private function init():void
			{
				if((Components.instance.session.hundprofil.bilde == "") || (Components.instance.session.hundprofil.bilde == null))
				{
					hundbilde.visible = true;
					hundbilde.source = data.bilde;
				}
				else
				{
					hundbilde.visible = true;
					hundbilde.source = 'no/airdog/view/assets/intetbilde.png';	
				}
			}
			
			public function visRedigerHundVindu():void
			{	
					Components.instance.controller.visRedigerHundVindu(UIComponent(this.parentApplication), Components.instance.session.hundprofil);				
			}  
		]]>
    </mx:Script>
	
	<mx:VBox width="100%" height="100%">
		
		<mx:HBox>
			<mx:Image id="hundbilde" width="100" height="100"/>
			<mx:VBox>
				<mx:Text id="tittel" text="{Components.instance.session.hundprofil.tittel}" paddingBottom="-15"/>
				<mx:HBox>
					<mx:Text id="navn" text="{Components.instance.session.hundprofil.navn}" fontSize="25"/><mx:Button label="Rediger" click="visRedigerHundVindu()"/>
				</mx:HBox>				
				<mx:HBox>						
					<mx:VBox>											
						<mx:Label text="ID:"/>
						<mx:Label text="Eier:"/>
					</mx:VBox>
					<mx:VBox>
						<mx:Text text="{Components.instance.session.hundprofil.idNr}"/>
						<mx:Text id="eier" text="{Components.instance.session.hundprofil.eier}"/>
					</mx:VBox>
					<mx:VBox>
						<mx:Label text="Kull:"/>
						<mx:Label text="VF:"/>						
					</mx:VBox>
					<mx:VBox>
						<mx:Text id="kull" text="{Components.instance.session.hundprofil.kullId}"/>
						<mx:Text id="vf" text="{Components.instance.session.hundprofil.vf}"/>
					</mx:VBox>
					<mx:VBox>
						<mx:Label text="Far:"/>
						<mx:Label text="Mor:"/>
					</mx:VBox>
					<mx:VBox>
						<mx:Text id="far" text="{Components.instance.session.hundprofil.farNavn}"/><!--<mx:Text id="farId" text="({Components.instance.session.hundprofil.farId})"/>-->
						<mx:Text id="mor" text="{Components.instance.session.hundprofil.morNavn}"/><!--<mx:Text id="morId" text="({Components.instance.session.hundprofil.morId})"/>-->
					</mx:VBox>
					<mx:VBox>
						<mx:Label text="Farge:"/>
						<mx:Label text="Kjønn:"/>
					</mx:VBox>					
					<mx:VBox>							
						<mx:Text id="farge" text="{Components.instance.session.hundprofil.farge}"/>
						<mx:Text id="kjonn" text="{Components.instance.session.hundprofil.kjonn}"/>
					</mx:VBox>					
				</mx:HBox>
			</mx:VBox>
		</mx:HBox>
		
        <mx:TabNavigator id="tn" 
        	width="100%" height="100%" paddingLeft="5" paddingRight="5" paddingBottom="5" 
        	creationPolicy="all">
        	
        	<mx:VBox id="v1" label="Jaktprøver">
            	<view:JaktproveListe hundId="{Components.instance.session.hundprofil.hundId}" />            
            </mx:VBox>

            <mx:VBox label="Avkom">
          		<view:AvkomListe hundId="{Components.instance.session.hundprofil.hundId}" />
            </mx:VBox>            
            
            <mx:VBox label="Helse">
            </mx:VBox>
            
            <mx:VBox label="Stamtavle">
				<view:Stamtre width="100%" hundId="{Components.instance.session.hundprofil.hundId}" dybde="4"/>
			</mx:VBox>
						
			<mx:VBox label="Ustilling">				
			</mx:VBox>
		</mx:TabNavigator>
		
	</mx:VBox>
	
</mx:VBox>