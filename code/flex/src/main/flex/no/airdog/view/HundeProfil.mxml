<?xml version="1.0" encoding="utf-8"?>
<mx:VBox 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:controller="no.airdog.controller.*"
	xmlns:view="no.airdog.view.*"
	width="90%" height="100%">
	
	<mx:Script>
        <![CDATA[
			import no.airdog.services.Components;  
			import mx.controls.Alert; 
			
			private function redigert(event:Event):void
            {
                Alert.show("Endret tekst til: " + event.target.text);
            }
      
            
        ]]>
    </mx:Script>
	
	<mx:VBox width="100%" height="100%">
		
		<mx:HBox>
			<mx:Image id="bilde" width="150" height="150" source="no/airdog/view/assets/{Components.instance.session.hundprofil.bilde}" />
			<mx:VBox>				
				<mx:Text id="navn" fontSize="30" text="{Components.instance.session.hundprofil.navn}" />
					
						
				<mx:HBox>						
					<mx:VBox>					
						<mx:HBox>
							<mx:Label text="Tittel:"/>
							<view:LabelEditor id="tittel" text="{Components.instance.session.hundprofil.tittel}" change="redigert(event);" styleName="labelEditorStyle"/>
						</mx:HBox>
						<mx:HBox>
							<mx:Label text="Navn:"/>
							<view:LabelEditor text="{Components.instance.session.hundprofil.navn}" change="redigert(event);" styleName="labelEditorStyle"/>														
							
							
						</mx:HBox>
						<mx:HBox>
							<mx:Label text="Eier:"/>
							<view:LabelEditor id="eier" text="{Components.instance.session.hundprofil.eier}" change="redigert(event);" styleName="labelEditorStyle"/>							
						</mx:HBox>
					</mx:VBox>
					<mx:VBox>
						<mx:HBox>
							<mx:Label text="Viltfinnerevne:"/>
							<mx:Text id="viltFinnerEvne" text="{Components.instance.session.hundprofil.eier}" />							
						</mx:HBox>
						<mx:VBox>
							<mx:HBox>
								<mx:Label text="Far: "/>
								<mx:Text id="far" text="{Components.instance.session.hundprofil.farNavn}" />
								<mx:Text id="farId" text="({Components.instance.session.hundprofil.farId})" />
							</mx:HBox>							
							<mx:HBox>
								<mx:Label text="Mor: "/>
								<mx:Text id="mor" text="{Components.instance.session.hundprofil.morNavn}" />
								<mx:Text id="morId" text="({Components.instance.session.hundprofil.morId})" />	
							</mx:HBox>
							<mx:HBox>
								<mx:Label text="Kull: "/>						
								<mx:Text id="kull" text="{Components.instance.session.hundprofil.kullId}" />
							</mx:HBox>
						</mx:VBox>		
											
					</mx:VBox>					
				</mx:HBox>
			</mx:VBox>
		</mx:HBox>
		
        <mx:TabNavigator id="tn" 
        	width="100%" height="100%" paddingLeft="5" paddingRight="5" paddingBottom="5" 
        	creationPolicy="all">
        	
        	<mx:VBox id="v1" label="JaktprÃ¸ver">
            	<view:JaktproveListe hundId="{Components.instance.session.hundprofil.hundId}" />            
            </mx:VBox>

            <mx:VBox label="Avkom">
          		<view:AvkomListe hundId="{Components.instance.session.hundprofil.hundId}" />
            </mx:VBox>            
            
            <mx:VBox label="Helse">
            </mx:VBox>
            
            <mx:VBox label="Stamtavle">
				<view:Stamtre width="100%" hundId="{Components.instance.session.hundprofil.hundId}" dybde="4" />
			</mx:VBox>
			
			<mx:VBox label="Ustilling">				
			</mx:VBox>			
        </mx:TabNavigator>
		
	</mx:VBox>
	
</mx:VBox>