<?xml version="1.0" encoding="utf-8"?>
<mx:VBox 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:controller="no.airdog.controller.*" 
	paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0"
	width="100%" height="100%">
	<mx:Script>
        <![CDATA[
        	import no.airdog.model.Hund;
        	import no.airdog.model.Hundeliste;
        	import no.airdog.view.HundeListeRenderer.NavnRendererStor;
			import no.airdog.services.Components;      
			import no.airdog.controller.*;
			
			public function visHund(event:Event):void
			{
				if (hundeGrid.selectedItem != null)
				{
					var hund:Hund = hundeGrid.selectedItem as Hund;
					Components.instance.controller.visHund(hund.hundId);
				}
			} 
			
			public function visStorHundeliste():void
			{
				Navigasjon.visStorHundeliste();
			}
			
			public function visLitenHundeliste():void
			{
				Navigasjon.visLitenHundeliste();
			}			            
        ]]>
    </mx:Script>
	<mx:DataGrid id="hundeGrid"			 
		dataProvider="{Components.instance.session.hundesokListe.provider}" 
		itemClick="visHund(event)"
		rowHeight="{Components.instance.session.hundesokListe.rendererHoyde}"
		paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0" 
		width="100%" height="100%" verticalAlign="middle">
		
		<mx:columns>
			<mx:DataGridColumn 
				headerText="Hunder" 
				itemRenderer="{Components.instance.session.hundesokListe.renderer}" 
				dataField="navn"/>
			<mx:DataGridColumn width="100" headerText="Id" dataField="hundId"/>
			<mx:DataGridColumn width="80" headerText="Eier" dataField="eierId"/>
			<mx:DataGridColumn width="150" headerText="Far" dataField="farNavn" sortable="false"/>
			<mx:DataGridColumn width="150" headerText="Mor" dataField="morNavn" sortable="false"/>
			<!--<mx:DataGridColumn width="50" headerText="Id" dataField="hundId"/>-->
			<!--<mx:DataGridColumn width="50" headerText="Kull" dataField="kullId"/>-->
			<mx:DataGridColumn width="50" headerText="KjÃ¸nn" dataField="kjonn" sortable="false" textAlign="center"/>
		</mx:columns>
	</mx:DataGrid>
</mx:VBox>