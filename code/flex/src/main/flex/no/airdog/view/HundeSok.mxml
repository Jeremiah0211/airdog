<?xml version="1.0" encoding="utf-8"?>
<mx:VBox 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:controller="no.airdog.controller.*" 
	paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0"
	width="100%" height="100%">
	<mx:Script>
        <![CDATA[
        	import no.airdog.model.Hund;
			import no.airdog.services.Components;      
			import no.airdog.controller.Navigasjon;
			
			public function visHund(kolonnenr:int):void
			{	
				if(hundeGrid.selectedItem != null && kolonnenr != 1)
				{
					var hund:Hund = hundeGrid.selectedItem as Hund;
					Components.instance.controller.visHund(hund.hundId);
				}
			} 
			
			public function visStorHundeliste():void
			{
				Navigasjon.visStorHundeliste();
			}
			
			public function visLitenHundeliste():void
			{
				Navigasjon.visLitenHundeliste();
			}			            
        ]]>
    </mx:Script>
	<mx:DataGrid id="hundeGrid"			 
		dataProvider="{Components.instance.session.hundesokListe.provider}"
		itemClick="visHund(event.columnIndex)"
		rowHeight="{Components.instance.session.hundesokListe.rendererHoyde}"
		paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0" 
		width="100%" height="100%" verticalAlign="middle">
		
		<mx:columns>
			<mx:DataGridColumn
				headerText="Hunder ({Components.instance.session.hundesokListe.provider.length})" 
				dataField="navn" width="525"
				itemRenderer="{Components.instance.session.hundesokListe.renderer}"/>
			<mx:DataGridColumn width="60" minWidth="60" headerText="ID" dataField="hundId">
				<mx:itemRenderer>
                    <mx:Component>
                        <mx:Label>
                            <mx:Script>
                            	<![CDATA[
                                	override public function set data(value:Object):void
                                    {
                                        super.data = value;
                                        this.selectable = true;
                                	}
                            	]]>
                            </mx:Script>
                        </mx:Label>
                    </mx:Component>
            	</mx:itemRenderer> 
			</mx:DataGridColumn>
			<mx:DataGridColumn width="60" minWidth="60" headerText="Eier" dataField="eierId"/>
			<mx:DataGridColumn width="150" minWidth="150" headerText="Far" dataField="farNavn" sortable="false"/>
			<mx:DataGridColumn width="150" minWidth="150" headerText="Mor" dataField="morNavn" sortable="false"/>
			<mx:DataGridColumn width="40" headerText="KjÃ¸nn" dataField="kjonn" sortable="false" textAlign="center"/>
		</mx:columns>
	</mx:DataGrid>
</mx:VBox>