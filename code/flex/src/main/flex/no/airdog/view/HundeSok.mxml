<?xml version="1.0" encoding="utf-8"?>
<mx:VBox 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:controller="no.airdog.controller.*" 
	width="90%" height="100%" minWidth="800" minHeight="500" horizontalAlign="center">
	<mx:Script>
        <![CDATA[
        	import no.airdog.model.Hundeliste;
        	import no.airdog.view.HundeListeRenderer.NavnRendererStor;
			import no.airdog.services.Components;      
			import no.airdog.controller.*;
			
			public function visHund(event:Event):void
			{
				if (hundeGrid.selectedItem != null)
					Navigasjon.visHundNr(hundeGrid.selectedItem.hundId);
			} 
			
			public function visStorHundeliste():void
			{
				Navigasjon.visStorHundeliste();
			}
			
			public function visLitenHundeliste():void
			{
				Navigasjon.visLitenHundeliste();
			}
			
			public function sok():void
			{
				Components.instance.controller.hundesok(sokefelt.text);
			}
			            
        ]]>
    </mx:Script>
	
	<mx:Panel width="100%" height="100%" 
		paddingBottom="40" paddingLeft="0" paddingRight="0" paddingTop="0"
		title="Hundesøk" >
		<mx:HBox width="100%">
			<mx:HBox horizontalAlign="left">
				<mx:TextInput id="sokefelt" width="200" textAlign="left"/>
				<mx:Button label="Søk" click="sok()"/>
			</mx:HBox>
			<mx:HBox horizontalAlign="right">
				<mx:Button label="Stor" click="visStorHundeliste()"/>
				<mx:Button label="Liten" click="visLitenHundeliste()"/>
			</mx:HBox>
		</mx:HBox>
		<mx:DataGrid id="hundeGrid"			
			paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0" width="100%" height="100%" rowHeight="{Components.instance.session.hundesokListe.rendererHoyde}"
			dataProvider="{Components.instance.session.hundesokListe.provider}" itemClick="visHund(event)">
			
			<mx:columns>
				<mx:DataGridColumn headerText="Hunder" itemRenderer="{Components.instance.session.hundesokListe.renderer}" dataField="navn"/>
			</mx:columns>
		</mx:DataGrid>
	</mx:Panel>
</mx:VBox>