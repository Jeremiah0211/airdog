<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
	height="100%"
	width="100%" 
	creationComplete="init()">
	
	<mx:Script>
		<![CDATA[
			import no.airdog.controller.*;
			import no.airdog.services.Components;  
			
			private function init():void
			{
				Components.instance.controller.hentAlleRoller();
				Components.instance.controller.hentAlleRettigheter();
			}
		]]>
	</mx:Script>
    
	<mx:DataGrid dataProvider="{Components.instance.session.alleRoller}" />
	<mx:DataGrid dataProvider="{Components.instance.session.alleRettigheter}" />
</mx:VBox>