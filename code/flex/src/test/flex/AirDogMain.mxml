<?xml version="1.0" encoding="utf-8"?>
<mx:Application
	xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:ms="modules.*" 
	width="800" height="600" layout="absolute">
	
	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import data.Dog;
			
			[Bindable]
			private var dogs:ArrayCollection = new ArrayCollection();
			public var dogId:int = 1;
			
			private function addDog(dogName:String):void
			{
				var tempDog:Dog = new Dog();
				tempDog.id = dogId;
				tempDog.name = dogName;
				
				dogs.addItem(tempDog);
					
				dogId++;
			}
			
			private function click():void
			{
				addDog(dogName.text.toString());
				dogName.text = "";
			}
		]]>
	</mx:Script>
	
	<mx:Canvas id="canvas1" width="800" height="600" backgroundColor="#CCCCCC">	
		<mx:HBox id="hbox1" x="0" y="0" width="100%" height="40" horizontalAlign="left" verticalAlign="middle" horizontalGap="0" 
			backgroundColor="#2D5A81" backgroundAlpha="0.57">
			
			<mx:Button id="button1" label="Add" click="{click()}" />
			<mx:TextInput id="dogName" width="250" enter="{click()}" />
			
		</mx:HBox>
		
		<mx:DataGrid dataProvider="{dogs}" width="{hbox1.width}" y="{hbox1.height}" />
	</mx:Canvas>
	
</mx:Application>
