<?xml version="1.0" encoding="utf-8"?>
<mx:VBox 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:ac="com.arcadiocarballares.*"
	xmlns:controller="no.airdog.controller.*" 
	width="90%" height="100%" minWidth="800" minHeight="600" horizontalAlign="center">
	<mx:Script>
        <![CDATA[
        	import no.airdog.model.Hundeliste;
        	import no.airdog.view.HundeListeRenderer.NavnRendererStor;
			import no.airdog.services.Components;      
			import no.airdog.controller.*;
			
			public function visHund(event:Event):void
			{
				if (hundeGrid.selectedItem != null)
					Navigasjon.visHundNr(hundeGrid.selectedItem.id);
			} 
			
			public function visStorHundeliste():void
			{
				Navigasjon.visStorHundeliste();
			}
			
			public function visLitenHundeliste():void
			{
				Navigasjon.visLitenHundeliste();
			}
			            
        ]]>
    </mx:Script>
	
	<mx:Panel width="100%" height="100%" 
		paddingBottom="40" paddingLeft="0" paddingRight="0" paddingTop="0"
		title="Story 'Alle hunder'" >
		<mx:HBox>
			<mx:Button label="Stor" click="visStorHundeliste()"/>
			<mx:Button label="Liten" click="visLitenHundeliste()"/>
		</mx:HBox>
		
		<ac:DataGridPaginated id="hundeGrid"			
			paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0" width="100%" height="100%" rowHeight="{Components.instance.session.hundeliste.storrelse}"
			dataProvider="{Components.instance.session.hundeliste.provider}" page="50" itemClick="visHund(event)">
			
			<ac:columns>
				<mx:DataGridColumn headerText="Hunder" itemRenderer="{Components.instance.session.hundeliste.renderer}" dataField="navn"/>
			</ac:columns>
		</ac:DataGridPaginated>
	</mx:Panel>
</mx:VBox>