<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
	width="100%" height="100%" paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0" layout="vertical" verticalAlign="middle">
	
	<mx:Script>
		<![CDATA[
			import mx.controls.Alert;
		]]>
	</mx:Script>
	
	<mx:Model id="hunder" source="../assets/Hunder.xml"/>
	
	<mx:Panel width="800" height="600" verticalAlign="bottom" paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0"
		title="Story 'Alle hunder'" >
		<mx:DataGrid id="grid1" dataProvider="{hunder.hund}"
			paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0" width="100%" height="100%" rowHeight="60">
			<mx:columns>
				<mx:DataGridColumn headerText="Bilde" itemRenderer="BildeRenderer" sortable="false" resizable="false" width="60"/>
				<mx:DataGridColumn headerText="Navn" itemRenderer="NavnRenderer" dataField="{hunder.navn}"/>
				<mx:DataGridColumn headerText="Info" itemRenderer="InfoRenderer" sortable="false"/>
			</mx:columns>
		</mx:DataGrid>
	</mx:Panel>
	
</mx:Application>