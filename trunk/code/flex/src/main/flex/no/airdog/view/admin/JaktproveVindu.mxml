	<mx:ControlBar horizontalAlign="center">
            <mx:Button 
                id="lagre"
                label="Lagre" 
                enabled="{godkjent}" 
                click="lagreJaktprove()"
            />
            <mx:Button 
                label="Tøm skjema" 
                enabled="{!tomt}"
                click="nullstillForm()"
            />
            <mx:Button 
            	label="Avbryt" 
            	click="avbryt()" 
            />
	</mx:ControlBar>
	
</mx:TitleWindow>