<?xml version="1.0" encoding="utf-8"?>
<mx:HBox 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:HundeListeRenderer="no.airdog.view.hundeListeRenderer.*"
	creationComplete="init()"
	paddingBottom="0" paddingLeft="0" paddingRight="10" paddingTop="0" 
	verticalAlign="middle" horizontalAlign="left"
	width="100%">
	<mx:Script>
		<![CDATA[
			import mx.utils.StringUtil;
		
			private function init():void
			{
				if((StringUtil.trim(data.bilde) == "") || (data.bilde == null))
				{
					hundbilde.source = data.bilde;
				}
				else
				{
					hundbilde.source = 'no/airdog/view/assets/intetbilde.png';	
				}
			}
		]]>
	</mx:Script>
	<mx:VBox 
	    width="60" height="60" paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0"
	    horizontalAlign="center" verticalAlign="middle">    
	    <mx:Image id="hundbilde" width="50" height="50"/>
	</mx:VBox>
	
	<mx:VBox 
	    width="100%" height="100%" paddingBottom="0" paddingLeft="0" paddingRight="5" paddingTop="0"
	    horizontalAlign="left" verticalAlign="middle">
	    <mx:Text text="{data.tittel + ' '}" selectable="false"/>
    	<mx:Text text="{data.navn}" fontSize="20" paddingBottom="0" paddingTop="-15" selectable="false"/>	
	</mx:VBox>	
</mx:HBox>